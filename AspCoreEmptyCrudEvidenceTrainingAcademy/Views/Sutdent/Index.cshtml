@model IEnumerable<Student>
<br />
<br />

<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<h1>List of Student</h1>
<div>
    <p> @Html.ActionLink("Create new Student", "Create", "Sutdent")</p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.AdmissionDate)</th>
                <th>Photo</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.AdmissionDate</td>
                    <td><img src="~/images/@item.PhotoPath" width="80" height="80" class="change_edit" asp-append-version="true" /></td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>